<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:background="@drawable/name_init_background"
    android:orientation="vertical"
    tools:context=".ui.search.SearchFragment">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/in_population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/search_edit_background"
                android:hint="Enter population"
                android:inputType="number"
                android:maxLength="15"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/in_aria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/search_edit_background"
                android:hint="Enter aria"
                android:inputType="number"
                android:maxLength="15"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/in_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/search_edit_background"
                android:hint="Enter region"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:textSize="18sp" />
        </LinearLayout>


        <Button
            android:id="@+id/search_but"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/search_but_background"
            android:gravity="center"
            android:padding="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/search_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/search_lite_background"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-black"
        android:paddingHorizontal="40dp"
        android:paddingVertical="2dp"
        android:text="@string/click_to_search_text"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>